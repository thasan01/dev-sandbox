{
  "version": 4,
  "configurePresets": [
    {
      "name": "vcpkg-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake" 
      }
    },
    {
      "name": "debug",
      "displayName": "Debug Build",
      "description": "Configures a Debug build using vcpkg.",
      "inherits": [ "vcpkg-base" ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "displayName": "Release Build",
      "description": "Configures a Release build using vcpkg.",
      "inherits": [ "vcpkg-base" ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ]
}